{
  "name": "News",
  "plural": "News",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "string",
      "required": true,
      "description": "Content of this news. You could put HTML content in here."
    },
    "author": {
      "type": "string",
      "required": true,
      "description": "Author of this News. E.g. Wendy Sanarwanto <wendy.sanarwanto@gmail.com>"
    },
    "publishDate": {
      "type": "date",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "description": "Status of this news. Allowed status are `draft`, `deleted`, `publish`",
      "default": "draft"
    }
  },
  "validations": [],
  "relations": {
    "topics": {
      "type": "hasAndBelongsToMany",
      "model": "Topic"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
